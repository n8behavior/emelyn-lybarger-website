{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "publish",
            "type": "shell",
            "command": "${workspaceFolder}/publish"
        },
        {
            "label": "post",
            "type": "shell",
            "command": "hugo",
            "args": [
                "new",
                "--kind",
                "post",
                "blog/${input:postName}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "postName",
            "type": "promptString",
            "description": "Name of post",
            "default": "my-new-post"
        }
    ]
}
